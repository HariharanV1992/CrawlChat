{
  "family": "pdf-preprocessor",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/pdf-preprocessor-task-role",
  "containerDefinitions": [
    {
      "name": "pdf-preprocessor",
      "image": "ACCOUNT_ID.dkr.ecr.ap-south-1.amazonaws.com/pdf-preprocessor:latest",
      "essential": true,
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "ap-south-1"
        },
        {
          "name": "S3_BUCKET",
          "value": "YOUR_S3_BUCKET"
        },
        {
          "name": "SQS_QUEUE_URL",
          "value": "https://sqs.ap-south-1.amazonaws.com/ACCOUNT_ID/pdf-preprocess-queue"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/pdf-preprocessor",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "python3 -c \"import preprocessing_service; print('OK')\" || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
} 